{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for my JSON secret format",

  "type": "object",

  "properties": {
    "ConnectionStrings": {
      "type": "object",
      "properties": {
        "ReleaseDataBase": { "type": "string" }
      },
      "required": [ "ReleaseDataBase" ]
    },
    "JwtOptions": {
      "type": "object",
      "properties": {
        "SecretKey": {
          "type": "string",
          "minLength": 20
        },
        "Issuer": { "type": "string" },
        "Audience": {
          "type": "string"
        }
      },
      "required": [ "Audience", "Issuer", "SecretKey" ]
    },
    "NotifyHubSettings":
    {
      "type": "object",
      "properties": {
        "AccessToken": { "type": "string" },
        "Url": { "type": "string" }
      },
      "required": ["AccessToken", "Url"]
    }
  },
  "required": ["ConnectionStrings", "JwtOptions", "NotifyHubSettings"]
}
