{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for my JSON secret format",

  "type": "object",

  "properties": {
    "ConnectionStrings": {
      "type": "object",
      "properties": {
        "ReleaseDataBase": { "type": "string" }
      },
      "required": [ "ReleaseDataBase" ]
    },
    "ServiceBusSettings": {
      "type": "object",
      "properties": {
        "ConnectionString": { "type": "string" },
        "FileServerQueueName": { "type": "string" }
      },
      "required": ["ConnectionString", "FileServerQueueName"]
    },
    "JwtOptions": {
      "type": "object",
      "properties": {
        "SecretKey": {"type": "string", "minLength": 20},
        "Issuer": {"type": "string"},
        "Audience": {"type": "string"
        }
      },
      "required": ["Audience", "Issuer", "SecretKey"]
    }
  },
  "required": ["ConnectionStrings", "ServiceBusSettings", "JwtOptions"]
}
